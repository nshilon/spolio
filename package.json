{
  "name": "spolio",
  "version": "0.2.11",
  "author": "Nir Shilon",
  "description": "a simple design system",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/simple-ui.umd.js",
  "module": "dist/simple-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/simple-ui.es.js",
      "require": "./dist/simple-ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "format": "biome format --write lib",
    "lint": "biome lint lib --apply",
    "check": "biome check --apply lib",
    "ci": "biome ci lib",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prebuild": "rm -rf dist",
    "build": "npm run build:svg-icons &&  vite build",
    "build:svg-icons": "node lib/components/ui/icon/build-svg-icons.cjs",
    "prepublish": "npm run build"
  },
  "peerDependencies": {
    "radix-ui": "^1.3.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@storybook/addon-docs": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^24.0.0",
    "sass": "^1.77.1",
    "storybook": "^8.6.12",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.4",
    "lucide-react": "^0.503.0",
    "radix-ui": "^1.3.3"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
